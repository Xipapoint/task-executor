{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug message-system with Nx",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "message-system"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/apps/message-system/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    },
